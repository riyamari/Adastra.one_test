<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/movie_image_dt"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="fitXY"
            app:layout_constraintDimensionRatio="H,12:16"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/movie_name_txt_dt"
            app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/movie_name_txt_dt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@android:color/holo_red_dark"
        android:gravity="center"
        android:textSize="@dimen/standard_text_size_large_xx"
        android:lineSpacingExtra="@dimen/standard_spacing_micro"
        app:layout_constraintTop_toBottomOf="@+id/movie_image_dt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:id="@+id/actor_text_dt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="@dimen/standard_spacing_xnormal"
            android:textSize="@dimen/standard_text_size_small_xxx"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/black_500"
            android:lineSpacingExtra="@dimen/standard_spacing_small"
            app:layout_constraintTop_toBottomOf="@+id/movie_name_txt_dt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

